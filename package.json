{
  "name": "@dalane/net-messenger",
  "version": "0.0.4",
  "description": "A message-oriented TCP socket library for node",
  "main": "./build/src/index.js",
  "scripts": {
    "start": "npm run build && eval $(cat .env | egrep -v '^#') node ./build/src",
    "postinstall": "npm run build",
    "build": "tsc",
    "test": "rm -r ./build && npm run build && nyc ava && nyc report --reporter=lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dalane/tcp-messenger.git"
  },
  "keywords": [
    "node",
    "tcp",
    "socket",
    "messages",
    "json",
    "client",
    "server"
  ],
  "author": "Dallas Ewing <dallas.ewing@dalane.co.uk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dalane/tcp-messenger/issues"
  },
  "homepage": "https://github.com/dalane/tcp-messenger#readme",
  "dependencies": {
    "@types/node": "^9.4.6",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "nyc": "^11.4.1"
  },
  "ava": {
    "files": [
      "./build/tests/*.test.js"
    ]
  }
}
